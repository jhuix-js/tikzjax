{
  "name": "@jhuix/tikzjax",
  "version": "0.1.1",
  "description": "TikZJax is TikZ running under WebAssembly in the browser or Node.js.",
  "keywords": [
    "tikz"
  ],
  "files": [
    "css",
    "dist",
    "lib",
    "tex"
  ],
  "private": false,
  "homepage": "https://github.com/jhuix-js/tikzjax#readme",
  "bugs": {
    "url": "https://github.com/jhuix-js/tikzjax/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhuix-js/tikzjax.git"
  },
  "license": "MIT",
  "author": "Jhuix [Hui Jin] <jhuix0117@gmail.com>",
  "style": "css/fonts.css",
  "browser": "./dist/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:web:min && npm run build:lib",
    "build:lib": "tsc --build --clean && tsc",
    "build:web": "node esbuild.js",
    "build:web:min": "node esbuild.js --omit=dev",
    "prepare": "npm run package",
    "dev": "npm run format && npm run build:web && npm run build:lib",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run build",
    "demo": "npx tsx demo/index.ts",
    "format": "prettier ./src --log-level warn --write"
  },
  "dependencies": {
    "@drgrice1/dvi2html": "^0.0.7-beta4",
    "memfs": "^4.51.1",
    "pako": "^2.1.0",
    "tar-fs": "^3.1.1",
    "threads": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "@types/pako": "^2.0.4",
    "@types/tar-fs": "^2.0.4",
    "esbuild": "0.27.1",
    "esbuild-node-builtins": "^0.1.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
