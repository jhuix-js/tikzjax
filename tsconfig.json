{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    // "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "target": "esnext",
    "module": "esnext",
    "outDir": "lib",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": false,
    "lib": ["esnext", "DOM"]
  },
  "exclude": ["src/browser"],
  "include": ["src"]
}
